<Window x:Class="DCS_ConfigMgmt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DCS_ConfigMgmt"
        mc:Ignorable="d"
        Title="924th DCS Configuration Manager" Height="336" Width="525">
    <Grid>

        <Label x:Name="label_dcsdir_current" Content="DCS Path Current" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label_dcsdir_alpha" Content="DCS Path Alpha" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label_dcsdir_beta" Content="DCS Path Beta" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button_dcsdir_current" Content="Pick dir" HorizontalAlignment="Left" Margin="128,13,0,0" VerticalAlignment="Top" Width="75" Click="Button_dcsdir_current_Click"/>
        <Button x:Name="button_dcsdir_alpha" Content="Pick dir" HorizontalAlignment="Left" Margin="128,44,0,0" VerticalAlignment="Top" Width="75" Click="Button_dcsdir_alpha_Click"/>
        <Button x:Name="button_dcsdir_beta" Content="Pick dir" HorizontalAlignment="Left" Margin="128,75,0,0" VerticalAlignment="Top" Width="75" Click="Button_dcsdir_beta_Click"/>
        <TextBox x:Name="textBox_dcsdir_current" HorizontalAlignment="Left" Height="23" Margin="222,13,0,0" TextWrapping="Wrap" Text="None selected" VerticalAlignment="Top" Width="248"/>
        <TextBox x:Name="textBox_dcsdir_alpha" HorizontalAlignment="Left" Height="23" Margin="222,44,0,0" TextWrapping="Wrap" Text="None selected" VerticalAlignment="Top" Width="248"/>
        <TextBox x:Name="textBox_dcsdir_beta" HorizontalAlignment="Left" Height="23" Margin="222,72,0,0" TextWrapping="Wrap" Text="None selected" VerticalAlignment="Top" Width="248"/>
        <RadioButton x:Name="radioButton_dcsdir_current" Content="" HorizontalAlignment="Left" Margin="475,18,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.053,-0.2" GroupName="DCSPath" Checked="RadioButton_dcsdir_current_Checked"/>
        <RadioButton x:Name="radioButton_dcsdir_alpha" Content="" HorizontalAlignment="Left" Margin="475,48,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.053,-0.2" GroupName="DCSPath" Checked="RadioButton_dcsdir_alpha_Checked"/>
        <RadioButton x:Name="radioButton_dcsdir_beta" Content="" HorizontalAlignment="Left" Margin="475,76,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.053,-0.2" GroupName="DCSPath" Checked="RadioButton_dcsdir_beta_Checked"/>

        <Button x:Name="button_linkcontrols" Content="Link controls" HorizontalAlignment="Left" Margin="285,110,0,0" VerticalAlignment="Top" Width="90" Click="Button_linkcontrols_Click" IsEnabled="False"/>
        <Button x:Name="button_unlinkcontrols" Content="Unlink controls" HorizontalAlignment="Left" Margin="380,110,0,0" VerticalAlignment="Top" Width="90" Click="Button_unlinkcontrols_Click" IsEnabled="False"/>

        <Label x:Name="label" Content="Current" HorizontalAlignment="Left" Margin="58,149,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button_load_nonvr_current" Content="Load non-VR" HorizontalAlignment="Left" Margin="58,180,0,0" VerticalAlignment="Top" Width="89" Click="Button_load_nonvr_current_Click"/>
        <Button x:Name="button_load_vr_current" Content="Load VR" HorizontalAlignment="Left" Margin="58,205,0,0" VerticalAlignment="Top" Width="89" Click="Button_load_vr_current_Click"/>

        <Label x:Name="label_Copy" Content="Alpha" HorizontalAlignment="Left" Margin="191,149,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button_load_nonvr_alpha" Content="Load non-VR" HorizontalAlignment="Left" Margin="191,180,0,0" VerticalAlignment="Top" Width="89" Click="Button_load_nonvr_alpha_Click"/>
        <Button x:Name="button_load_vr_alpha" Content="Load VR" HorizontalAlignment="Left" Margin="191,205,0,0" VerticalAlignment="Top" Width="89" Click="Button_load_vr_alpha_Click"/>

        <Label x:Name="label_Copy1" Content="Beta" HorizontalAlignment="Left" Margin="324,149,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button_load_nonvr_beta" Content="Load non-VR" HorizontalAlignment="Left" Margin="324,180,0,0" VerticalAlignment="Top" Width="89" Click="Button_load_nonvr_beta_Click"/>
        <Button x:Name="button_load_vr_beta" Content="Load VR" HorizontalAlignment="Left" Margin="324,205,0,0" VerticalAlignment="Top" Width="89" Click="Button_load_vr_beta_Click"/>


    </Grid>
</Window>
